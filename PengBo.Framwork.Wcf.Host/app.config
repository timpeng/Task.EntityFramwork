      </wsHttpBinding>
      <netTcpBinding>
        <binding name="netTcpBinding">
          <security mode="None"/>
        </binding>
      </netTcpBinding>
    </bindings>
    <services>
      <service name="PengBo.Framwork.Wcf.Service.CategoryService" behaviorConfiguration="customServiceBehaviors">
        <endpoint contract="PengBo.Framwork.Wcf.Contract.ICategoryService" bindingConfiguration="wsHttpBinding" binding="wsHttpBinding" address="Category"/>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080/"/>
          </baseAddresses>
        </host>
      </service>
      <service name="PengBo.Framwork.Wcf.Service.TestService" behaviorConfiguration="customServiceBehaviors">
        <endpoint contract="PengBo.Framwork.Wcf.Contract.ITestService" bindingConfiguration="netTcpBinding" binding="netTcpBinding" address="Test"/>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8088/"/>
            <add baseAddress="net.tcp://localhost/"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="customServiceBehaviors">
          <!-- 为避免泄漏元数据信息，
          请在部署前将以下值设置为 false -->
          <serviceMetadata httpGetEnabled="True"/>
